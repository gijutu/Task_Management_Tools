<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2><%= @task.errors.count %><%= t('.errors') %></h2>
        <ul>

        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
  <% end %>

  <div class="task_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="task_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="task_title">
    <%= form.label :limit %>
    <%= form.date_select :limit_time %>
  </div>
  <div class="task_title">
    <%= form.label :status %>
    <%= form.select :status, Task.statuses_i18n.keys.map { |k| [Task.statuses_i18n[k], k]} %>
  </div>
  <div class="task_title">
    <%= form.label :priority_color %>
    <%= form.select :priority_color, [["たか", "あか"], ["まあまあ", "きいろ"], ["ひくい", "あお"]] %>
  </div>

  <%= form.submit "とうろく"%>
<% end %>

<%= link_to t('.return'), tasks_path %>
